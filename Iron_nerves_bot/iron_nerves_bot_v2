import telebot
from telebot import types

TOKEN = "8433614169:AAH5b5hE-OkEfv0qf8OYz-FwbWkYHPlER5c"
bot = telebot.TeleBot(TOKEN)

# –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é
def main_menu():
    kb = types.ReplyKeyboardMarkup(resize_keyboard=True)
    buttons = [
        "–ü—Ä–∞–≤–∏–ª–∞ —Å—Ç–∞–ª—å–Ω—ã—Ö –Ω–µ—Ä–≤–æ–≤",
        "–ü–∏—Ç–∞–Ω–∏–µ –∏ –∑–¥–æ—Ä–æ–≤—å–µ",
        "–°–ø–æ—Ä—Ç –∏ –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å",
        "–ü–µ—Ä–µ–º–µ–Ω—ã –∏ –æ—Ç–¥—ã—Ö",
        "–≠–≥–æ–∏–∑–º –∏ –ª–∏—á–Ω—ã–µ –≥—Ä–∞–Ω–∏—Ü—ã",
        "–û—Ç–Ω–æ—à–µ–Ω–∏—è",
        "–í—Ä–µ–¥–Ω—ã–µ –ø—Ä–∏–≤—ã—á–∫–∏",
        "–ò—Ä–æ–Ω–∏—è –∏ –≥–∏–±–∫–æ—Å—Ç—å",
        "–ü–æ–ª–Ω–∞—è –ø—Ä–æ–∫–∞—á–∫–∞ (15 –ø—Ä–∞–≤–∏–ª)"
    ]
    for b in buttons:
        kb.add(b)
    return kb

# –°—Ç–∞—Ä—Ç
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.send_message(
        message.chat.id,
        "–ü—Ä–∏–≤–µ—Ç! üëã –Ø –±–æ—Ç '–ñ–µ–ª–µ–∑–Ω—ã–µ –ù–µ—Ä–≤—ã' v2.\n"
        "–í—ã–±–µ—Ä–∏ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π —Ä–∞–∑–¥–µ–ª:",
        reply_markup=main_menu()
    )

# –û—Ç–≤–µ—Ç—ã –Ω–∞ –∫–Ω–æ–ø–∫–∏ —Å –ø–æ–¥–º–µ–Ω—é / —Ä–∞—Å—à–∏—Ä–µ–Ω–Ω—ã–º–∏ –∫–∞—Ä—Ç–∏–Ω–∫–∞–º–∏
@bot.message_handler(func=lambda m: True)
def answer(message):
    text = message.text.strip()

    if text == "–ü—Ä–∞–≤–∏–ª–∞ —Å—Ç–∞–ª—å–Ω—ã—Ö –Ω–µ—Ä–≤–æ–≤":
        bot.send_message(
            message.chat.id,
            "–ó–¥–µ—Å—å –≤–≤–æ–¥–Ω—ã–µ –ø—Ä–∞–≤–∏–ª–∞ –¥–ª—è —Å—Ç–∞–ª—å–Ω—ã—Ö –Ω–µ—Ä–≤–æ–≤...\n"
            "7 –±–∞–∑–æ–≤—ã—Ö –ø—Ä–∏–Ω—Ü–∏–ø–æ–≤ + —Å–æ–≤–µ—Ç—ã –¥–ª—è –∂–∏–∑–Ω–∏.\n"
            "–ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –∫–∞—Ä—Ç–∏–Ω–∫—É –º–æ—Ç–∏–≤–∞—Ü–∏–∏!"
        )
        # –ü—Ä–∏–º–µ—Ä –≤—Å—Ç–∞–≤–∫–∏ –∫–∞—Ä—Ç–∏–Ω–∫–∏
        bot.send_photo(message.chat.id, "https://mensby.com/wp-content/uploads/2021/01/zheleznye-nervy-15-sposobov-obresti-stalnye-nervy-03.jpg")

    elif text == "–ü–∏—Ç–∞–Ω–∏–µ –∏ –∑–¥–æ—Ä–æ–≤—å–µ":
        bot.send_message(
            message.chat.id,
            "–ù–∞–ª–∞–¥—å –ø–∏—Ç–∞–Ω–∏–µ –¥–ª—è –Ω–µ—Ä–≤–æ–≤: –≤–∏—Ç–∞–º–∏–Ω—ã B1, B5, B6, C, E, Ca, Mg, Cu, P.\n"
            "–ë–æ–ª—å—à–µ —Ñ—Ä—É–∫—Ç–æ–≤, –ø—Ç–∏—Ü—ã, —Ä—ã–±—ã, –º—è—Å–∞, —è–∏—Ü."
        )

    elif text == "–°–ø–æ—Ä—Ç –∏ –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å":
        bot.send_message(
            message.chat.id,
            "–ê–∫—Ç–∏–≤–Ω–æ—Å—Ç—å —É–∫—Ä–µ–ø–ª—è–µ—Ç –Ω–µ—Ä–≤–Ω—É—é —Å–∏—Å—Ç–µ–º—É –∏ —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å.\n"
            "–ë–µ–≥, –ø–ª–∞–≤–∞–Ω–∏–µ, —Å–ø–æ—Ä—Ç–∑–∞–ª, –µ–¥–∏–Ω–æ–±–æ—Ä—Å—Ç–≤–∞."
        )

    elif text == "–ü–µ—Ä–µ–º–µ–Ω—ã –∏ –æ—Ç–¥—ã—Ö":
        bot.send_message(
            message.chat.id,
            "–ù–µ —Å–æ–ø—Ä–æ—Ç–∏–≤–ª—è–π—Å—è –ø–µ—Ä–µ–º–µ–Ω–∞–º. –°–æ–Ω –∏ –æ—Ç–¥—ã—Ö 7-8 —á–∞—Å–æ–≤ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã.\n"
            "–í—Å—Ç–∞–≤–∏–º –º–æ—Ç–∏–≤–∏—Ä—É—é—â—É—é –∫–∞—Ä—Ç–∏–Ω–∫—É."
        )
        bot.send_photo(message.chat.id, "https://mensby.com/wp-content/uploads/2021/01/zheleznye-nervy-15-sposobov-obresti-stalnye-nervy-04.jpg")

    elif text == "–≠–≥–æ–∏–∑–º –∏ –ª–∏—á–Ω—ã–µ –≥—Ä–∞–Ω–∏—Ü—ã":
        bot.send_message(message.chat.id, "–í—ã–±–∏—Ä–∞–π —Å–µ–±—è, —É—á–∏—Å—å –≥–æ–≤–æ—Ä–∏—Ç—å '–Ω–µ—Ç', —Å–Ω–∏–∂–∞–π —á—É–∂–æ–µ –≤–ª–∏—è–Ω–∏–µ.")

    elif text == "–û—Ç–Ω–æ—à–µ–Ω–∏—è":
        bot.send_message(message.chat.id, "–í–∫–ª–∞–¥—ã–≤–∞–π –≤—Ä–µ–º—è –≤ –±–ª–∏–∑–∫–∏—Ö –∏ –æ—Ç–Ω–æ—à–µ–Ω–∏—è. –ü–æ–¥–¥–µ—Ä–∂–∫–∞ —Ñ–æ—Ä–º–∏—Ä—É–µ—Ç —Å—Ç–∞–ª—å–Ω—ã–µ –Ω–µ—Ä–≤—ã.")

    elif text == "–í—Ä–µ–¥–Ω—ã–µ –ø—Ä–∏–≤—ã—á–∫–∏":
        bot.send_message(message.chat.id, "–°–Ω–∏–∑—å –∫–æ—Ñ–µ, —Å–∏–≥–∞—Ä–µ—Ç—ã, –∞–ª–∫–æ–≥–æ–ª—å, —ç–Ω–µ—Ä–≥–µ—Ç–∏–∫–∏ ‚Äî –±–µ—Ä–µ–≥–∏ –Ω–µ—Ä–≤—ã.")

    elif text == "–ò—Ä–æ–Ω–∏—è –∏ –≥–∏–±–∫–æ—Å—Ç—å":
        bot.send_message(message.chat.id, "–û—Ç–Ω–æ—Å–∏—Å—å –∫ –∂–∏–∑–Ω–∏ —Å –∏—Ä–æ–Ω–∏–µ–π, –±—É–¥—å –≥–∏–±–∫–∏–º, –∏–º–ø—Ä–æ–≤–∏–∑–∏—Ä—É–π.")

    elif text == "–ü–æ–ª–Ω–∞—è –ø—Ä–æ–∫–∞—á–∫–∞ (15 –ø—Ä–∞–≤–∏–ª)":
        bot.send_message(message.chat.id, "–ó–¥–µ—Å—å –ø–æ–ª–Ω—ã–π –∫–æ–º–ø–ª–µ–∫—Ç 15 –ø—Ä–∞–≤–∏–ª + –∫–∞—Ä—Ç–∏–Ω–∫–∏ –ø–æ–¥ –∫–∞–∂–¥–æ–µ –ø—Ä–∞–≤–∏–ª–æ.\n–ú–æ–∂–Ω–æ —Å–¥–µ–ª–∞—Ç—å –æ—Ç–¥–µ–ª—å–Ω–æ–µ –ø–æ–¥–º–µ–Ω—é –¥–ª—è –∫–∞–∂–¥–æ–π —Ç–µ–º—ã.")

    else:
        bot.send_message(
            message.chat.id,
            "–í—ã–±–µ—Ä–∏ —Ä–∞–∑–¥–µ–ª –∏–∑ –º–µ–Ω—é:",
            reply_markup=main_menu()
        )

# –ó–∞–ø—É—Å–∫
print("ü§ñ Iron Nerves Bot v2 –∑–∞–ø—É—â–µ–Ω...")
bot.polling(none_stop=True)
