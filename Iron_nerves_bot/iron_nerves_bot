# === –ö–æ–º–∞–Ω–¥—ã ===
@bot.message_handler(commands=["start"])
def start(message):
    bot.send_message(
        message.chat.id,
        "üëã –ü—Ä–∏–≤–µ—Ç! –í–æ—Ç —Ç–≤–æ–∏ –∫–Ω–æ–ø–∫–∏ –¥–ª—è —Å—Ç–∞–ª—å–Ω—ã—Ö –Ω–µ—Ä–≤–æ–≤:",
        reply_markup=main_menu()
    )

@bot.message_handler(func=lambda message: message.text in content)
def send_content(message):
    item = content[message.text]
    bot.send_photo(
        message.chat.id,
        photo=item["photo"],
        caption=item["text"]
    )

# === –ó–∞–ø—É—Å–∫ ===
print("‚úÖ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω...")
bot.polling(none_stop=True)

